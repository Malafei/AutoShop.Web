@model EditPasswordVievModel
@{
    ViewData["Title"] = "Edit Password";
}


<h1 style="text-align:center">AutoShop.Web</h1>
<h2 style="text-align:center">Login to the account</h2>
<form asp-controller="User" asp-action="EditPassword" class="modal-body animate">

    <div>
        <label asp-for="NewPassword"><b>Please enter new password</b></label>
        <input asp-for="NewPassword" type="text" placeholder="New password" autocomplete="off">
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ConfirmPassword"><b>Please confirm password</b></label>
        <input asp-for="ConfirmPassword" type="text" placeholder="Confirm pasword" autocomplete="off">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit">Next</button>
    <hr />
    <div class="form-group" style="vertical-align:text-bottom">No account?<a asp-area="" asp-controller="User" asp-action="Create">Create it!</a></div>
    <div class="form-group" style="vertical-align:text-bottom">Return to!<a asp-area="" asp-controller="User" asp-action="LoginAut"> Log in</a></div>
</form>
